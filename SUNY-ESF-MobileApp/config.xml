		<gap:splash src="images/Default-568h@2x.png" gap:platform="ios" width="1136" height="640" />
		<gap:splash src="images/splash_mdpi.png" gap:platform="android" gap:density="ldpi" />
		<gap:splash src="images/splash_mdpi.png" gap:platform="android" gap:density="mdpi" />
		<gap:splash src="images/splash_hdpi.png" gap:platform="android" gap:density="hdpi" />
		<gap:splash src="images/splash_hdpi.png" gap:platform="android" gap:density="xhdpi" />
