		<gap:splash src="images/splash_mdpi.png" gap:platform="ios" width="480" height="320" />
		<gap:splash src="images/Default2x.png" gap:platform="ios" width="640" height="960" />
		<gap:splash src="images/Default2x.png" gap:platform="ios" width="960" height="640" />
